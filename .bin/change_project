#!/usr/bin/env bash

# default values = hottest project!
rvm="1.9.2"
gemset=""
project_dir="$HOME/Projects/creativenz/creativenz"

case `echo $1 | tr "[A-Z]" "[a-z]"` in
cnz|creativenz)
 rvm="1.9.2"
 gemset="creativenz"
 project_dir="$HOME/Projects/creativenz/creativenz"
 ;;
aml|drisk|deloitte)
 rvm="1.8.7"
 gemset="deloitte"
 project_dir="$HOME/Projects/deloitte/aml"
 ;;
creativehq)
 rvm="1.8.7"
 gemset="creativehq"
 project_dir="$HOME/Projects/creativehq/creativehq"
 ;;
invoicer)
 rvm="1.8.7"
 project_dir="$HOME/Projects/invoicer/invoicer"
 ;;
tracks)
 rvm="1.8.7"
 project_dir="$HOME/Projects/tracks/tracks"
 ;;
labour|etrac)
 rvm="1.8.7"
 gemset="labour"
 project_dir="$HOME/Projects/labour/labour"
 ;;
redmine|tracker)
 rvm="1.8.7"
 gemset="tracker"
 project_dir="$HOME/Projects/tracker/tracker"
 ;;

cd|consumer-draft|psp|pspd|powerswitch-draft)
 rvm="1.8.7"
 gemset="consumer"
 project_dir="$HOME/Projects/consumer/consumer_public_draft/ConsumerPublic"
 ;;
ca|cad|consumer-admin-draft|psa|psad|powerswitch-admin-draft)
 rvm="1.8.7"
 gemset="consumer"
 project_dir="$HOME/Projects/consumer/consumer_admin_draft/Consumer"
 ;;
ps|pspp|powerswitch-public-prod)
 rvm="1.8.7"
 gemset="consumer"
 project_dir="$HOME/Projects/consumer/powerswitch_public/ConsumerPublic"
 ;;
cpa|consumer-prod-admin|psap|powerswitch-admin-prod)
 rvm="1.8.7"
 gemset="consumer"
 project_dir="$HOME/Projects/consumer/consumer_admin/Consumer"
 ;;
cp|consumer)
 rvm="1.8.7"
 gemset="consumer"
 project_dir="$HOME/Projects/consumer/consumer_public/ConsumerConsumer"
 ;;
ps-calc|calc|calculator)
 rvm="1.8.7"
 gemset="consumer"
 project_dir="$HOME/Projects/consumer/calculator/PowerSwitchCalculators"
 ;;

learningconnexion|phoenix|tlc)
 rvm="1.8.7"
 gemset="phoenix"
 project_dir="$HOME/Projects/tlc/Learning-Connexion"
 ;;
dot|dotfiles)
 rvm="default"
 project_dir="$HOME/Projects/dotfiles"
 ;;
sponsafier|speedracer)
 rvm="1.8.7"
 gemset="sponsafier"
 project_dir="$HOME/Projects/sponsafier/speedracer"
 ;;
esac

if [[ -n $gemset ]]; then
 rvm "${rvm}@${gemset}"
 echo "Using gemset: $gemset"
else
 rvm $rvm
fi
cd $project_dir

