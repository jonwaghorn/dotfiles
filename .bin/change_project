#!/usr/bin/env bash

# default values = hottest project!
rvm="1.9.2"
gemset=""
project_dir="$HOME/Projects/creativenz/creativenz"

case `echo $1 | tr "[A-Z]" "[a-z]"` in
cnz|creativenz)
 rvm="1.9.2"
 gemset="creativenz"
 project_dir="$HOME/Projects/creativenz/creativenz"
 ;;
invoicer)
 rvm="1.8.7"
 project_dir="$HOME/Projects/invoicer/invoicer"
 ;;
tracks)
 rvm="1.8.7"
 project_dir="$HOME/Projects/tracks/tracks"
 ;;
labour|etrac)
 rvm="1.8.7"
 gemset="labour"
 project_dir="$HOME/Projects/labour/labour/trunk/Labour"
 ;;
ps|psp|ps-public|powerswitch)
 rvm="1.8.7"
 gemset="consumer"
 project_dir="$HOME/Projects/consumer-public/ConsumerPublic"
 ;;
psa|ps-admin|power-admin|powerswitch-admin)
 rvm="1.8.7"
 gemset="consumer"
 project_dir="$HOME/Projects/consumer/Consumer"
 ;;
learningconnexion|phoenix)
 rvm="1.8.7"
 gemset="phoenix"
 project_dir="$HOME/Projects/Learning-Connexion/Learning-Connexion"
 ;;
dot|dotfiles)
 rvm="default"
 project_dir="$HOME/Projects/dotfiles/dotfiles"
 ;;
esac

if [[ -n $gemset ]]; then
 rvm "${rvm}@${gemset}"
 echo "Using gemset: $gemset"
else
 rvm $rvm
fi
cd $project_dir

