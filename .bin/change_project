 ;;
creativehq)
 rvm="1.8.7"
 gemset="creativehq"
 project_dir="$HOME/Projects/creativehq/creativehq"
 ;;
invoicer)
 rvm="1.8.7"
 project_dir="$HOME/Projects/invoicer/invoicer"
 ;;
tracks)
 rvm="1.8.7"
 project_dir="$HOME/Projects/tracks/tracks"
 ;;
labour|etrac)
 #rvm="1.8.7"
 #gemset="labour"
 project_dir="$HOME/Projects/labour/labour"
 ;;
cpc)
 project_dir="$HOME/Projects/cpc/crime-prevention-community"
 ;;
redmine|tracker)
 rvm="1.8.7"
