#!/usr/bin/env bash

# default values = hottest project!
rvm="1.9.2"
gemset=""
project_dir="$HOME/Projects/creativenz/creativenz"

case `echo $1 | tr "[A-Z]" "[a-z]"` in
cnz|creativenz)
 rvm="1.9.2"
 gemset="creativenz"
 project_dir="$HOME/Projects/creativenz/creativenz"
 ;;
aml|drisk|deloitte)
 rvm="1.8.7"
 gemset="deloitte"
 project_dir="$HOME/Projects/deloitte/aml"
 ;;
creativehq)
 rvm="1.8.7"
 gemset="creativehq"
 project_dir="$HOME/Projects/creativehq/creativehq"
 ;;
invoicer)
 rvm="1.8.7"
 project_dir="$HOME/Projects/invoicer/invoicer"
 ;;
tracks)
 rvm="1.8.7"
 project_dir="$HOME/Projects/tracks/tracks"
 ;;
labour|etrac)
 rvm="1.8.7"
 gemset="labour"
 project_dir="$HOME/Projects/labour/labour"
 ;;
consumer)
 rvm="1.8.7"
 gemset="consumer"
 project_dir="$HOME/Projects/consumer/consumer-public/ConsumerConsumer"
 ;;
pspd|psp|ps-public-draft|powerswitch-public-draft)
 rvm="1.8.7"
 gemset="consumer"
 project_dir="$HOME/Projects/consumer/powerswitch-public-draft/ConsumerPublic"
 ;;
psad|psa|ps-admin-draft|powerswitch-admin-draft)
 rvm="1.8.7"
 gemset="consumer"
 project_dir="$HOME/Projects/consumer/powerswitch-admin-draft/Consumer"
 ;;
pspp|ps-public-prod|powerswitch-public-prod)
 rvm="1.8.7"
 gemset="consumer"
 project_dir="$HOME/Projects/consumer/powerswitch-public-prod/ConsumerPublic"
 ;;
psap|ps-admin-prod|powerswitch-admin-prod)
 rvm="1.8.7"
 gemset="consumer"
 project_dir="$HOME/Projects/consumer/powerswitch-admin-prod/Consumer"
 ;;
ps-calc|calc|calculator)
 rvm="1.8.7"
 gemset="consumer"
 project_dir="$HOME/Projects/consumer/calculator/PowerSwitchCalculators"
 ;;
learningconnexion|phoenix)
 rvm="1.8.7"
 gemset="phoenix"
 project_dir="$HOME/Projects/Learning-Connexion/Learning-Connexion"
 ;;
dot|dotfiles)
 rvm="default"
 project_dir="$HOME/Projects/dotfiles"
 ;;
esac

if [[ -n $gemset ]]; then
 rvm "${rvm}@${gemset}"
 echo "Using gemset: $gemset"
else
 rvm $rvm
fi
cd $project_dir

